<Window x:Class="pokemon.View.DamagePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Black"
        Foreground="White"
        Width="300"
        Height="100"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,0">
            <TextBlock Text="{Binding PokemonName}" FontSize="16"/>
            <TextBlock Text="use" FontSize="16" Margin="10,0"/>
            <TextBlock Text="{Binding AttackName}" FontSize="16"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
            <TextBlock Text="{Binding Damage}" FontSize="16"/>
            <TextBlock Text="dammages" FontSize="16" Margin="10,0"/>
        </StackPanel>
    </Grid>
</Window>
