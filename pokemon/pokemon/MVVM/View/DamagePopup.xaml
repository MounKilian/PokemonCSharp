<Window x:Class="pokemon.View.DamagePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Black"
        Foreground="White"
        Width="200"
        Height="100"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding AttackName}" FontSize="16" TextAlignment="Center"/>
            <TextBlock Text="{Binding Damage}" FontSize="20" FontWeight="Bold" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
